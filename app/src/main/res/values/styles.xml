<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorBlue</item>

    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <!--<item name="fontFamily">@font/montserrat_light</item>-->
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
    <!--<item name="fontFamily">@font/montserrat_light</item>-->
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="AppProgressbarTheme">
        <item name="colorAccent">@color/colorWhite</item> <!-- Whatever color you want-->
    </style>


    <!-- Round Transparent Button Theme -->
    <style name="AppTheme.Round.Transparent.Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/btn_round_transparent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
